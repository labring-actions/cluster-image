FROM scratch

ENV DOMAIN=${DOMAIN:-""}
ENV MINIO_OPERATOR_NAME=${NAME:-"minio-operator"}
ENV MINIO_OPERATOR_NAMESPACE=${NAMESPACE:-"minio-system"}
ENV BACKEND_NAMESPACE=${BACKEND_NAMESPACE:-"objectstorage-system"}
ENV FRONTEND_NAMESPACE=${FRONTEND_NAMESPACE:-"objectstorage-frontend"}
ENV STORAGE_SIZE=${STORAGE_SIZE:-1}
ENV MINIO_ADMIN_USER=${MINIO_ADMIN_USER:-"username"}
ENV MINIO_ADMIN_PASSWORD=${MINIO_ADMIN_PASSWORD:-"password"}

COPY . .

CMD ["bash entrypoint.sh"]
