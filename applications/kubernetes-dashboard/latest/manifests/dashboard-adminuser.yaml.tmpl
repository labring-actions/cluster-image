apiVersion: v1
kind: ServiceAccount
metadata:
  name: admin-user
  namespace: {{ default "kubernetes-dashboard" .NAMESPACE }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: admin-user
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: admin-user
  namespace: {{ default "kubernetes-dashboard" .NAMESPACE }}
---
apiVersion: v1
kind: Secret
metadata:
  name: admin-user
  namespace: {{ default "kubernetes-dashboard" .NAMESPACE }}
  annotations:
    kubernetes.io/service-account.name: "admin-user"
type: kubernetes.io/service-account-token
